{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./lib",
    "module": "es2015",
    "target": "es5",
    "lib": ["dom","dom.iterable","esnext"],
    "jsx": "react-jsx",
    // "allowJs": true,
    "declaration": true,
    "noEmitOnError": true,
    "noImplicitAny": false, // any 类型不报错
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["src/*"],
    }
  },
  "include": [
    "src/*",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
